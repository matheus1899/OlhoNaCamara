<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/custom_ripple"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <TextView
        android:id="@+id/item_lista_voto_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/textTitle"
        style="@android:style/TextAppearance.Small"
        app:layout_constraintBottom_toTopOf="@+id/item_lista_voto_partido"
        app:layout_constraintEnd_toStartOf="@+id/item_lista_voto_guideline_h_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ALFREDINHO DA PAES PAZES" />

    <TextView
        android:id="@+id/item_lista_voto_partido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="BENÃ‡OLA"
        android:textColor="@color/textSubtitle"
        style="@android:style/TextAppearance.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_lista_voto_guideline_h_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_lista_voto_nome"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <View
        android:id="@+id/item_lista_voto_voto"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_voto_sim_24dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_lista_voto_guideline_h_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_lista_voto_separador"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCC"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_lista_voto_guideline_h_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_end="78dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_lista_voto_separador_vertical"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#CCC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>